{
  "name": "cucumber-official",
  "displayName": "Cucumber",
  "description": "Official Cucumber VSCode extension",
  "version": "0.0.1",
  "publisher": "CucumberOpen",
  "engines": {
    "vscode": "^1.63.2"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Testing"
  ],
  "keywords": [
    "Cucumber",
    "Gherkin",
    "Feature"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cucumber/vscode.git"
  },
  "icon": "images/icon-128x128.png",
  "activationEvents": [
    "onLanguage:gherkin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gherkin",
        "aliases": [
          "Gherkin",
          "Feature",
          "Cucumber"
        ],
        "extensions": [
          ".feature"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Cucumber",
      "properties": {
        "cucumber.features": {
          "description": "Globs to locate feature files",
          "type": [
            "array"
          ],
          "required": false
        },
        "cucumber.glue": {
          "description": "Globs to locate glue code aka step definitions and hooks",
          "type": [
            "array"
          ],
          "required": false
        },
        "cucumber.parameterTypes": {
          "markdownDescription": "The parameterTypes setting can be used to define [Custom Parameter Types](https://github.com/cucumber/cucumber-expressions#custom-parameter-types) that are not directly visible in the source code.\n\nFor example, if you're using the actor parameter type from [@cucumber/screenplay](https://github.com/cucumber/screenplay.js#actors) you'll have to declare this in the parameterTypes setting:\n\n```json\n{\n  \"cucumber.parameterTypes\": [\n    { \"name\": \"actor\", \"regexp\": \"[A-Z][a-z]+\" }\n  ]\n}\n```",
          "type": [
            "array"
          ],
          "required": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-extension && npm run esbuild-server",
    "esbuild-extension": "esbuild ./src/extension.ts --external:vscode --bundle --outfile=out/extension.js --format=cjs --platform=node --minify --sourcemap",
    "esbuild-server": "npm run compile && esbuild dist/src/cucumber-language-server.js --bundle --outfile=out/cucumber-language-server.js --format=cjs --platform=node --sourcemap",
    "copy-wasm": "mkdir -p out && cp node_modules/@cucumber/language-service/dist/*.wasm out",
    "build": "npm run esbuild-extension && npm run esbuild-server",
    "compile": "tsc --build",
    "pretest": "npm run compile",
    "eslint": "eslint src --ext ts",
    "eslint-fix": "eslint src --ext ts --max-warnings 0 --fix",
    "test": "node ./dist/src/test/runTest.js",
    "prepublishOnly": "npm run update-settings-docs",
    "update-settings-docs": "./scripts/update-settings-docs.sh",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@cucumber/language-server": "0.7.0",
    "vscode-languageclient": "7.0.0"
  },
  "devDependencies": {
    "@types/glob": "7.2.0",
    "@types/mocha": "9.1.1",
    "@types/vscode": "1.66.0",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "esbuild": "0.14.38",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "glob": "8.0.1",
    "mocha": "9.2.2",
    "npm-check-updates": "12.5.10",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "typescript": "4.6.3",
    "vsce": "2.7.0",
    "vscode-test": "1.6.1"
  }
}
