{
  "name": "cucumber",
  "displayName": "Cucumber",
  "description": "Official Cucumber VSCode extension",
  "version": "0.0.1",
  "publisher": "Cucumber",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "Cucumber",
    "Gherkin"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cucumber/vscode.git"
  },
  "icon": "https://raw.githubusercontent.com/cucumber/vscode/main/images/icon-128x128.png",
  "activationEvents": [
    "onLanguage:gherkin"
  ],
  "main": "./dist/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gherkin",
        "aliases": [
          "Gherkin",
          "gherkin",
          "feature",
          "cucumber"
        ],
        "extensions": [
          ".feature",
          ".feature.md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Cucumber",
      "properties": {
        "cucumber.features": {
          "description": "Feature file globs",
          "type": [
            "array"
          ],
          "required": false
        },
        "cucumber.glue": {
          "description": "Glue code globs",
          "type": [
            "array"
          ],
          "required": false
        },
        "cucumber.parameterTypes": {
          "markdownDescription": "[Custom Parameter Types](https://github.com/cucumber/cucumber-expressions#custom-parameter-types)",
          "type": [
            "array"
          ],
          "required": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc --build",
    "watch": "tsc --build --watch",
    "pretest": "npm run compile",
    "eslint": "eslint src --ext ts",
    "eslint-fix": "eslint src --ext ts --max-warnings 0 --fix",
    "test": "node ./dist/src/test/runTest.js"
  },
  "dependencies": {
    "@cucumber/language-server": "^0.4.0",
    "vscode-languageclient": "7.0.0"
  },
  "devDependencies": {
    "@types/glob": "7.2.0",
    "@types/mocha": "9.1.0",
    "@types/vscode": "1.63.1",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "glob": "7.2.0",
    "mocha": "9.2.0",
    "npm-check-updates": "12.1.0",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.3",
    "typescript": "4.5.4",
    "vsce": "2.6.3",
    "vscode-test": "1.6.1"
  }
}
